TABLES:

CREATE TABLE MS_WEBUSER(
MAIL VARCHAR(255) PRIMARY KEY,
PASSWORD VARCHAR(255) NOT NULL
);

CREATE TABLE MS_PRODUCER(
MAIL VARCHAR(255) NOT NULL,
NAME VARCHAR(255) NOT NULL,
ADDRESS VARCHAR(255) NOT NULL,
FOREIGN KEY (MAIL) REFERENCES MS_WEBUSER(MAIL)
);

CREATE TABLE MS_ADMIN(
MAIL VARCHAR(255) NOT NULL,
NAME VARCHAR(255) NOT NULL,
SURNAME VARCHAR(255) NOT NULL,
PHONENUMBER NUMERIC(10,0) NOT NULL,
FOREIGN KEY (MAIL) REFERENCES MS_WEBUSER(MAIL)
);

CREATE TABLE MS_CUSTOMER(
MAIL VARCHAR(255) NOT NULL,
NAME VARCHAR(255) NOT NULL,
SURNAME VARCHAR(255) NOT NULL,
PAYMMENTCARD NUMERIC(16,0) NOT NULL,
BILLINGADDRESS VARCHAR(255) NOT NULL,
FOREIGN KEY (MAIL) REFERENCES MS_WEBUSER(MAIL)
);

CREATE TABLE MS_CATEGORY(
ID INT PRIMARY KEY AUTO_INCREMENT,
NAME VARCHAR(255) NOT NULL,
PARENT INT NOT NULL
);

CREATE TABLE MS_PRODUCT(
ID INT PRIMARY KEY AUTO_INCREMENT,
NAME VARCHAR(255) NOT NULL,
PRICE NUMERIC(8,2) NOT NULL, 
QUANTITY INT,
PRODUCER VARCHAR(255) NOT NULL,
CATEGORY INT NOT NULL,
FOREIGN KEY (PRODUCER) REFERENCES MS_PRODUCER(MAIL),
FOREIGN KEY (CATEGORY) REFERENCES MS_CATEGORY(ID)
);

CREATE TABLE MS_CART(
IDPRODUCT INT NOT NULL,
MAIL VARCHAR(255) NOT NULL,
ADDDATE DATETIME NOT NULL,
FOREIGN KEY (IDPRODUCT) REFERENCES MS_PRODUCT(ID),
FOREIGN KEY (MAIL) REFERENCES MS_WEBUSER(MAIL)
);

CREATE TABLE MS_ORDER(
ID INT PRIMARY KEY AUTO_INCREMENT,
MAIL VARCHAR(255) NOT NULL,
DATE DATETIME NOT NULL,
TOTAL NUMERIC(10,2) NOT NULL, 
FOREIGN KEY (MAIL) REFERENCES MS_WEBUSER(MAIL)
);

CREATE TABLE MS_SHIPMENT(
ID INT PRIMARY KEY AUTO_INCREMENT,
SHIPDATE DATETIME NOT NULL,
ARRIVEDATE DATETIME NOT NULL,
SHIPADDRESS VARCHAR(255) NOT NULL,
TOTAL NUMERIC(10,2) NOT NULL,
IDORDER INT NOT NULL,
FOREIGN KEY (IDORDER) REFERENCES MS_ORDER(ID)
);